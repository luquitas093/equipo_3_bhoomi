<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs")%>
    <link rel="stylesheet" href="/css/styles-login.css">

<body>

    <%- include("../partials/header.ejs")%>

    <!-- FORMULARIO LOGIN -->
    <main class="main-login">

        <%- include("../partials/menuMediaQuery.ejs")%>
        
        <section class="encabezadologin">
            <h1 class="titulologin">Ingresá</h1>
        </section>
        <section class="login">
            <form class="formulariologin" action="/ingresar" method="POST">
                <div class="estilodivlogin">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Ingrese su mail" class="formatocampo" value="<%= typeof old != 'undefined' ? old.email : '' %>" required>
                    <% if(typeof(errors) != 'undefined' && errors.email){%>
                        <span class="error">
                          <%= errors.email.msg %>
                        </span>
                    <%}%>
                </div>

                <div class="estilodivlogin">
                    <label for="contraseña">Contraseña</label>
                    <input type="password" id="password" name="password" placeholder="Ingrese su contraseña" class="formatocampo" required>
                    <% if(typeof(errors) != 'undefined' && errors.password){%>
                        <span class="error">
                          <%= errors.password.msg %>
                        </span>
                    <%}%>
                </div>
                <div class="remember-me">
                    <input type="checkbox" name="remember" id="remember">
                    <label for="remember">Recuérdame <i class="fas fa-guitar"></i></label>
                </div>
                <div class="estilodivlogin center">

                    <input type="submit" value="Ingresar" class="button">

                </div>
                <div>
                    <h4 class="olvidemicontraseña"><a href="#">¿Te olvidaste la contraseña?</a></h4>
                </div>
                <div>
                    <h4 class="crearcuenta"><a href="/registro">¿No tenés cuenta? ¡Creala!</a></h4>
                </div>


            </form>
        </section>

                <!-- BANNER-BOTTOM (FUTURO CARROUSEL)-->
                <figure class="banner-carrousel-bottom">
                    <img src="img/banner-bottom.gif" alt="banner-bottom">
                </figure>

    </main>

    <%- include("../partials/footer.ejs")%>
    
</body>

</html>