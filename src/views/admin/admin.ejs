<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs")%>
    <link rel="stylesheet" href="/css/styles-admin.css">

<body>

    <%- include("../partials/header.ejs")%>

    <!-- TABLERO ADMINISTRADOR -->
    <main class = "main-admin">

        <%- include("../partials/menuMediaQuery.ejs")%>

         <section class = "admin-products">
           <h1 class = "encabezado-admin">Administrador de productos</h1>
           <div class = "add-product">
             <a href="/administrador/crearproducto">Agregar producto</a>
          </div>
          <table class = "table-products">
              <thead>
                  <th>Id</th>
                  <th>Nombre</th>
                  <th>Ver</th>
                  <th>Editar</th>
                  <th>Borrar</th>
              </thead>
              <tbody>
                  <% for (let i = 0; i < products.length; i++) { %>
                <tr>
                    <td><%=products[i].id%></td>
                    <td><%=products[i].name%></td>
                    <td><a href="/administrador/detalleproducto/<%= products[i].id%> "><i class="fas fa-eye"></i></a></td>
                    <td><a href="/administrador/editarproducto/<%= products[i].id%> "><i class="fas fa-edit"></i></a></td>
                    <td><a href="/administrador/borrarproducto/<%= products[i].id%>"><i class="fas fa-trash-alt"></i></a></td>
                </tr>
                <% } %>
              </tbody>
          </table>
    </main>

    <%- include("../partials/footer.ejs")%>
    
</body>

</html>