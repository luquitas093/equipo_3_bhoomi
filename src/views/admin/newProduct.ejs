<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs")%>
    <link rel="stylesheet" href="/css/styles-newProduct.css">

<body>

    <%- include("../partials/header.ejs")%>

    <!-- FORMULARIO NUEVO PRODUCTO -->
    <main class="main-newproduct">

        <%- include("../partials/menuMediaQuery.ejs")%>
    
        <section class="encabezadonewproduct">
            <h1 class="encabezado">¿Qué vas a vender?</h1>
        </section>
        <section class="newProduct">
            <form class="formularioproducto" action="/administrador/crearproducto" method="POST" enctype="multipart/form-data">
                <div class="stylediv">
                    <strong><label for="name">Nombre del producto</label></strong>
                    <input type="text" id="name" name="name" placeholder="Nombre del Producto" class="camp">
                    <% if(locals.errors && errors.name){%>
                        <span class="error">
                          <%= errors.name.msg %>
                        </span>
                </div>
                <div class="stylediv">
                    <strong><label for="description">Descripción del Producto</label></strong>
                    <textarea name="description" class="camp"> </textarea>
                    <% if(locals.errors && errors.description){%>
                        <span class="error">
                          <%= errors.description.msg %>
                        </span>
                </div>
                <div class="stylediv">
                    <strong><label for="imagen">Imagen del Producto</label></strong>
                    <input class="camp" type="file" id="imagen" name="imagen" accept=".jpg">
                    <% if(locals.errors && errors.imagen){%>
                        <span class="error">
                          <%= errors.imagen.msg %>
                        </span>
                </div>
             
                <div class="stylediv">
                    <strong><label for="category">Categoría</label></strong>
                    <select name="category">
                        <option value="#" selected disabled>Seleccione una opcion...</option>
                        <% for (let i = 0; i < categories.length; i++) { %>
                            <option value="<%=categories[i].id%>">
                                <%= categories[i].name%>
                            </option>
                        <% } %>
                    </select> 
                    <% if(locals.errors && errors.category){%>
                        <span class="error">
                          <%= errors.category.msg %>
                        </span>   
                </div>

                <div class="stylediv">
                    <strong><label for="quantity">Stock</label></strong>
                    <input type="number" id="quantity" name="quantity" placeholder="Cantidad en Stock" class="camp">
                    <% if(locals.errors && errors.quantity){%>
                        <span class="error">
                          <%= errors.quantity.msg %>
                        </span> 
                </div>
                             
                <div class="stylediv">
                    <strong><label for="price">Precio</label></strong>
                    <input type="number" id="price" name="price" placeholder="$" class="camp">
                    <% if(locals.errors && errors.price){%>
                        <span class="error">
                          <%= errors.price.msg %>
                        </span> 
                </div>

                <div class="stylediv center">
                    <input type="reset" value="Borrar" class="button">
                    <input type="submit" value="Crear Producto" class="button"> 

                </div>


            </form>
            
        </section>
        
    </main>

    <%- include("../partials/footer.ejs")%>
    
</body>

</html>