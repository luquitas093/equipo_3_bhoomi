<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs")%>
    <link rel="stylesheet" href="/css/styles-editProduct.css">

<body>

    <%- include("../partials/header.ejs")%>

    <!-- FORMULARIO EDITAR PRODUCTO -->
    <main class="main-editproduct">

        <%- include("../partials/menuMediaQuery.ejs")%>
        
    
        <section class="encabezadoEdicion">
            <h1 class="encabezado"> Editar Producto</h1>
        </section>
        <section class="editProduct">
            <form class="editform" action="/" method="POST">
                <div class="stylediv">
                    <strong><label for="editName">Modificar Nombre</label></strong>
                    <input type="text" id="editName" name="editName" placeholder="Ingresar nuevo nombre" class="camp-edit"required>

                </div>
                <div class="stylediv">
                    <strong><label for="descriptionEdit"> Modificar Descripción</label></strong>
                    <textarea name="descriptionEdit" class="camp-edit" required> </textarea>
                    
                </div>
                <div class="stylediv">
                    <strong><label for="imagenEdit">Agregar y/o Modificar Imagenes</label></strong>
                   
                    <input class="camp-edit" type="file" id="imagenEdit" name="imagenEdit" accept=".jpg">
                     
                </div>
             
                <div class="stylediv">
                    <strong><label for="categoryEdit">Modificar Categoría</label></strong>
                    <select name="categoryEdit">
                        <option name="cuidadocapilar">Cuidado Capilar</option>
                        <option name="rostroycuerpo">Rostro y Cuerpo</option>
                        <option name="combos">Combos</option>
                        <option name="regalos">Regalos</option>
                        <option name="sale">Sale</option>
                    </select>    

                </div>

                <div class="stylediv">
                    <strong><label for="stockEdit">Modificar Stock</label></strong>
                    <input type="number" id="stockEdit" name="stockEdit" placeholder="Ingrese nuevo Stock" class="camp-edit" required>

                </div>
                             
                <div class="stylediv">
                    <strong><label for="priceEdit"> Modificar Precio</label></strong>
                    <input type="number" id="priceEdit" name="priceEdit" placeholder="$" class="camp-edit" required>
                </div>

                <div class="stylediv center">
                    <input type="reset" value="Borrar" class="button">
                    <input type="submit" value="Actualizar" class="button"> 

                </div>


            </form>
            
        </section>

                <!-- BANNER-BOTTOM (FUTURO CARROUSEL)-->
                <figure class="banner-carrousel-bottom">
                    <img src="img/banner-bottom.gif" alt="banner-bottom">
                </figure>

    </main>

    <%- include("../partials/footer.ejs")%>
    
</body>

</html>